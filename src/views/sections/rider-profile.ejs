<section class="rider-commissions">
  <header class="rc-header">
    <h2 class="rc-title">Rider Profile</h2>
    <p class="rc-subtitle">View detailed performance metrics for individual riders.</p>
  </header>

  <div class="rc-table-wrapper" style="padding:20px;">
    <div style="display:flex;align-items:center;gap:16px;">
      <img src="https://cdn.builder.io/api/v1/image/assets%2Fa5647e4ccf094d4d939a079b9f892c1c%2Ff54e0df2f0fb4bff9c894340e2efe67a?format=webp&width=72" alt="avatar" style="width:72px;height:72px;border-radius:50%;object-fit:cover" />
      <div>
        <h3 style="margin:0 0 4px;font-size:20px"><%= rider.name %></h3>
        <div class="section-note">Rider ID: <%= rider.id %></div>
      </div>
    </div>
  </div>

  <div class="rc-toolbar" style="margin-top:16px">
    <div class="rc-filters" style="flex-wrap:wrap">
      <div class="rc-select rc-chip">Total Deliveries&nbsp;<strong><%= metrics.totalDeliveries %></strong></div>
      <div class="rc-select rc-chip">Avg. Delivery Time&nbsp;<strong><%= metrics.avgDeliveryMins %> mins</strong></div>
      <div class="rc-select rc-chip">On-Time Rate&nbsp;<strong><%= metrics.onTimeRate %>%</strong></div>
      <div class="rc-select rc-chip">Total KM Traveled&nbsp;<strong><%= metrics.totalKm %> km</strong></div>
    </div>
  </div>

  <div class="rc-table-wrapper">
    <table class="rc-table">
      <thead>
        <tr>
          <th class="col-name">Date</th>
          <th class="col-km">Deliveries</th>
          <th class="col-perf">Avg. Delivery Time</th>
          <th class="col-comm">Distance (KM)</th>
        </tr>
      </thead>
      <tbody>
        <% history.forEach(row => { %>
          <tr>
            <td class="rc-col-name"><%= row.date %></td>
            <td class="rc-col-km"><%= row.deliveries %></td>
            <td class="rc-col-perf"><%= row.avgTime %> mins</td>
            <td class="rc-col-commission"><%= row.distanceKm %> km</td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
