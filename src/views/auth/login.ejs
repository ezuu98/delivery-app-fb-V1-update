<section class="auth-panel">
  <h2 class="auth-title">Login</h2>
  <% if (error) { %>
    <div class="auth-error"><%= error %></div>
  <% } %>
  <form method="post" action="/auth/login" class="auth-form">
    <label class="auth-label">Email
      <input class="auth-input" type="email" name="email" value="<%= email %>" required />
    </label>
    <label class="auth-label">Password
      <input class="auth-input" type="password" name="password" required />
    </label>
    <button class="auth-button" type="submit">Sign in</button>
  </form>
  <p class="auth-alt">No account? <a href="/auth/register">Register</a></p>
</section>
